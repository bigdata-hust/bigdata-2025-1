# Elasticsearch Configuration
ES_HOST=localhost
ES_PORT=9200
ES_SCHEME=http
ES_USERNAME=
ES_PASSWORD=
ES_USE_SSL=false
ES_VERIFY_CERTS=false

# Kibana Configuration
KIBANA_HOST=localhost
KIBANA_PORT=5601
KIBANA_SCHEME=http

# Spark Configuration
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=4g
SPARK_EXECUTOR_MEMORY=4g
SPARK_SHUFFLE_PARTITIONS=200

# Data Paths
DATA_PATH=../data/
OUTPUT_PATH=output/
CHECKPOINT_PATH=checkpoints/

# Analysis Configuration
ANALYSIS_1_DAYS=90
ANALYSIS_1_TOP_N=10
ANALYSIS_2_TOP_N=10
ANALYSIS_3_MIN_REVIEWS=50
ANALYSIS_3_TOP_N=10
ANALYSIS_4_POSITIVE_THRESHOLD=4
ANALYSIS_4_TOP_N=10
ANALYSIS_6_TOP_N=20

# Elasticsearch Index Names
INDEX_TOP_SELLING=yelp-top-selling
INDEX_DIVERSE_STORES=yelp-diverse-stores
INDEX_BEST_RATED=yelp-best-rated
INDEX_POSITIVE_REVIEWS=yelp-positive-reviews
INDEX_PEAK_HOURS=yelp-peak-hours
INDEX_TOP_CATEGORIES=yelp-top-categories
INDEX_STORE_STATS=yelp-store-stats

# Logging
LOG_LEVEL=INFO
LOG_FILE=pipeline.log

# Performance
ES_BATCH_SIZE_ENTRIES=1000
ES_BATCH_SIZE_BYTES=1mb
ES_NODES_WAN_ONLY=true
ES_INDEX_AUTO_CREATE=true
